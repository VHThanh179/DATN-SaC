@page "/customerdialog/{id}"
@using Share.Models
@inject Share.Interfaces.ICustomerSvc _customerSvc
@inject NavigationManager navigation
@inject IToastService toastService


<div class="container">
    <div class="row">
        <div class="col-xl-6 mx-auto">
            <div class="card card-signin flex-row shadow-lg card-signup">
                <div class="card-body">
                    <h2 class="card-title text-center font-weight-bold text-uppercase">Thông tin khách hàng</h2>
                    <div class="col-md-12">
                        <EditForm Model="@customer" OnValidSubmit="@SubmitForm">
                            <DataAnnotationsValidator />
                            <input type="hidden" @bind="customer.CustomerId" />
                            <div class="form-group">
                                <label class="control-label">Họ và tên</label>
                                <input @bind="customer.FullName" class="form-control" readonly />
                                <ValidationMessage For="@(()=>customer.FullName)" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Ngày sinh</label>
                                <input type="date" @bind="customer.CreatedDate" class="form-control" readonly />
                                <ValidationMessage For="@(()=>customer.CreatedDate)" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Số điện thoại</label>
                                <input type="number" @bind="customer.PhoneNumber" class="form-control" readonly />
                                <ValidationMessage For="@(()=>customer.PhoneNumber)" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <input @bind="customer.Email" class="form-control" readonly />
                                <ValidationMessage For="@(()=>customer.Email)" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Địa chỉ</label>
                                <input @bind="customer.Address" class="form-control" readonly />
                                <ValidationMessage For="@(()=>customer.Address)" />
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input" @bind="customer.Status" /> Trạng thái
                                    <ValidationMessage For="@(()=>customer.Status)" />
                                </label>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info" @onclick="@(() => toastService.ShowSuccess("Lưu thành công!"))">Lưu</button>
                                <button type="submit" class="btn btn-primary" @onclick="@Cancel">Thoát</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string id { get; set; }

    private Share.Models.Customer customer { get; set; }

    protected override void OnInitialized()
    {
        customer = _customerSvc.GetCustomer(int.Parse(id));
    }

    private void SubmitForm()
    {
        _customerSvc.EditCustomer(customer.CustomerId, customer);
        navigation.NavigateTo("customerlist", true);
    }

    private void Cancel()
    {
        navigation.NavigateTo("customerlist", true);
    }
}